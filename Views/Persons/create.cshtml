@model PersonCreateInputModel;

<h1>@ViewData["Title"]</h1>
<form method="post">
    <div class="row">
        <div class="col-md-8 mb-3">
            <label for="Name">Name</label>
            <input type="text" asp-for="Name" class="form-control form-control-lg" placeholder="Digita la persona che vuoi inserire...">
        </div>
        <div class="col-md-8 mb-3">
            <label for="Surname">Surname</label>
            <input type="text" asp-for="Surname" class="form-control form-control-lg" placeholder="Digita la persona che vuoi inserire...">
        </div>
        <div class="col-md-8 mb-3">
            <label for="Age">Age</label>
            <input type="text" asp-for="Age" class="form-control form-control-lg" placeholder="Digita la persona che vuoi inserire...">
        </div>
        <div class="col-md-4">
            <button type="submit" class="btn btn-primary btn-lg btn-block"><i class="fas fa-rocket"></i> Crea persona!</button>
        </div>
    </div>
</form>